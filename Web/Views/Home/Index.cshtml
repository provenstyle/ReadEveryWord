@using System.Web.Optimization
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Read Every Word</title>

    <noscript>
        <meta http-equiv="refresh" content="0; @Url.Content("~/Error/NoJavaScript")" />
    </noscript>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <!-- Prevent text size adjustment on orientation change. -->
    <style>
        html {
            -webkit-text-size-adjust: 100%;
        }
    </style>
    <meta name="apple-mobile-web-app-title" content="Read Every Word">

    <link rel="apple-touch-icon" sizes="152X152" href="~/Content/images/AppIcon152x152.png" />
    <link rel="apple-touch-icon" sizes="144X144" href="~/Content/images/AppIcon144x144.png" />
    <link rel="apple-touch-icon" sizes="120X120" href="~/Content/images/AppIcon120x120.png" />
    <link rel="apple-touch-icon" sizes="114X114" href="~/Content/images/AppIcon114x114.png" />
    <link rel="apple-touch-icon" sizes="100X100" href="~/Content/images/AppIcon100x100.png" />
    <link rel="apple-touch-icon" sizes="80X80" href="~/Content/images/AppIcon80x80.png" />
    <link rel="apple-touch-icon" sizes="76X76" href="~/Content/images/AppIcon76x76.png" />
    <link rel="apple-touch-icon" sizes="72X72" href="~/Content/images/AppIcon72x72.png" />
    <link rel="apple-touch-icon" sizes="60X60" href="~/Content/images/AppIcon60x60.png" />
    <link rel="apple-touch-icon" sizes="58X58" href="~/Content/images/AppIcon58x58.png" />
    <link rel="apple-touch-icon" sizes="57X57" href="~/Content/images/AppIcon57x57.png" />
    <link rel="apple-touch-icon" sizes="50X50" href="~/Content/images/AppIcon50x50.png" />
    <link rel="apple-touch-icon" sizes="40X40" href="~/Content/images/AppIcon40x40.png" />
    <link rel="apple-touch-icon" sizes="29X29" href="~/Content/images/AppIcon29x29.png" />

    <!-- Startup images -->
    <!-- iOS 6 & 7 iPad (retina, portrait) -->
    <link href="/Content/images/1536X2008StartupImage.png"
          media="(device-width: 768px) and (device-height: 1024px)
                 and (orientation: portrait)
                 and (-webkit-device-pixel-ratio: 2)"
          rel="apple-touch-startup-image">

    <!-- iOS 6 & 7 iPad (retina, landscape) -->
    <link href="/Content/images/1496X2048StartupImage.png"
          media="(device-width: 768px) and (device-height: 1024px)
                 and (orientation: landscape)
                 and (-webkit-device-pixel-ratio: 2)"
          rel="apple-touch-startup-image">

    <!-- iOS 6 iPad (portrait) -->
    <link href="/Content/images/768X1004StartupImage.png"
          media="(device-width: 768px) and (device-height: 1024px)
                 and (orientation: portrait)
                 and (-webkit-device-pixel-ratio: 1)"
          rel="apple-touch-startup-image">

    <!-- iOS 6 iPad (landscape) -->
    <link href="/Content/images/748X1024StartupImage.png"
          media="(device-width: 768px) and (device-height: 1024px)
                 and (orientation: landscape)
                 and (-webkit-device-pixel-ratio: 1)"
          rel="apple-touch-startup-image">

    <!-- iOS 6 & 7 iPhone 5 -->
    <link href="~/Content/images/640X1096StartupImage.png"
          media="(device-width: 320px) and (device-height: 568px)
                 and (-webkit-device-pixel-ratio: 2)"
          rel="apple-touch-startup-image">

    <!-- iOS 6 & 7 iPhone (retina) -->
    <link href="/Content/images/640X920StartupImage.png"
          media="(device-width: 320px) and (device-height: 480px)
                 and (-webkit-device-pixel-ratio: 2)"
          rel="apple-touch-startup-image">

    <!-- iOS 6 iPhone -->
    <link href="/Content/images/320x460StartupImage.png"
          media="(device-width: 320px) and (device-height: 480px)
                 and (-webkit-device-pixel-ratio: 1)"
          rel="apple-touch-startup-image">

    @Styles.Render("~/Content/css")

    <script type="text/javascript">
        if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }
    </script>
</head>
<body class="container" ng-app="readEveryWord">
    <div id="applicationHost">
        <div ng-controller="shellController">
            <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
                <div class="container" ng-cloak ng-show="bootstrapped">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#collapse-nav-bar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/#/"><span class="glyphicon glyphicon-book"></span>Read Every Word</a>
                    </div>
                    <div class="collapse navbar-collapse" id="collapse-nav-bar">
                        <ul class="nav navbar-nav navbar-right" data-mobile-nav-fix>
                            <li class="username" ng-bind="userModel.username"></li>
                            <li class="visible-xs"><a href="#readingLog">Reading Log</a></li>
                            <li class="visible-xs"><a ng-click="refresh()">Refresh Data</a></li>
                            <li class="visible-xs"><a href="#about">About</a></li>
                            <li class="visible-xs"><a ng-click="logOff()">Log Off</a></li>

                            <li class="hidden-xs dropdown">
                                <a href="" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#readingLog">Reading Log</a></li>
                                    <li><a ng-click="refresh()">Refresh Data</a></li>
                                    <li><a href="#about">About</a></li>
                                    <li><a ng-click="logOff()">Log Off</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div>
            </nav>
            <div class="page-host" ng-view></div>
        </div>
    </div>
    
